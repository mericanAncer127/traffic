<div class='inner'>
  <div class='button-padding fr'>
    <a class='button' href='#<%= user %>/<%= repo %>/<%= branch %>/<%= path %>/new'>New Post</a>
  </div>

  <div class='post-listing prose clearfix'>

  <% _.each(paths, function(p, index) { %>
    <% if (p.path !== current_path.path) { %>
      <a class='link folder' href='#<%= app.username %>/<%= repo %>/<%= branch %>/<%= p.path %>'>
        <div class='image'></div>
        <h2><small><%= p.name %></small></h2>
      </a>
    <% } %>
  <% });Â %>

  <% if (posts.length > 0) { %>
    <% _.each(posts, function(post) { %>
      <a class='link load-post toggle-view' href='#<%= user %>/<%= repo %>/<%= branch %>/<%= post.path %>'>
        <div class='published-on'><%= post.date.toDateString() %></div>
        <div class='image'></div>
        <h2><small><%= post.title || 'Untitled' %></small></h2>
      </a>
    <% }); %>
    </div>
  <% } else { %>
    <h2>No posts in this category.</h2>
  <% } %>
</div>
