<div class='inner'>
  <div class='button-padding fr'>
    <a class='button' href='#<%= user %>/<%= repo %>/<%= path %>/new'>New Post</a>
  </div>

  <!-- Path selection -->
  <div class='paths clearfix'>
    <h1><small>Category:</small></h1>
      <ul>
        <li class='dropdown'>
          <% if (path) { %>
          <a class='dropdown-toggle' data-toggle='dropdown' href='#'><%= path %></a>
          <% } else { %>
          <a class='dropdown-toggle' data-toggle='dropdown' href='#'>Choose a content type</a>
          <% } %>
          <ul class='dropdown-menu flank-left'>
            <% _.each(paths, function(p, index) { %>
            <li><a href='#<%= app.username %>/<%= repo %>/<%= branch %>/<%= p.path %>'><%= p.path %></a></li>
            <% }) %>
          </ul>
        </li>
      </ul>
  </div>

  <% if (posts.length > 0) { %>
    <div class='post-listing prose clearfix'>
    <% _.each(posts, function(post) { %>
    <a class='link load-post toggle-view' href='#<%= user %>/<%= repo %>/<%= branch %>/<%= post.path %>'>
        <div class='published-on'>
          <span class='datestamp'><%= post.date.toDateString() %></span>
          <span class='clock'>&nbsp;</span>
        </div>
        <div class='image'></div>
        <h2><small><%= post.title || 'Untitled' %></small></h2>
      </a>
    <% }); %>
    </div>
  <% } else { %>
    <h2>No Posts yet</h2>
  <% } %>
</div>
