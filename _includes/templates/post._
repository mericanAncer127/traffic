<div class='inner clearfix'>
  <div id='publish_status'>
    <small>Status</small>
  </div>

  <a class='toggle-mode preview' href='#'>Preview</a>

  <div class='toggle-mode published'><input type="checkbox" id="post_published"<%= metadata.published ? ' checked="checked"' : ''%>/>Published</div>

  <div class='document prose'>
    <div class='content'>

      <div class='metadata'>
        <a href='#' class='icon meta'>Toggle Metadata</a>

        <form id='metadata_form'>
          <h3><small>Metadata</small></h3>
          <textarea id="raw_metadata" name="raw_metadata"><%= raw_metadata %></textarea>
        </form>
      </div>

      <textarea id='code' name='code'><%= content %></textarea>
    </div>
    <div class='content-preview hidden'>
      <div class='post-content'></div>
    </div>

  </div>
</div>
