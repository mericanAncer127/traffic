<div class="metadata">
  <form id="metadata_form">
    <div>
      <label>Title</label> <input type="text" name="title" id="post_title" value="<%= metadata.title %>"/>
    </div>
    <div>
      <label>Subtitle</label> <input type="text" name="subtitle" id="post_subtitle" value="<%= metadata.subtitle %>"/>
    </div>
    <div>
      <label>Layout</label> <input type="text" name="layout" id="post_layout" value="<%= metadata.layout %>"/>
    </div>
    <div>
      <label>Category</label> <input type="text" name="category" id="post_category" value="<%= metadata.category %>"/>
    </div>
    <div>
      <label>Permalink</label> <input type="text" name="permalink" id="post_permalink" value="<%= metadata.permalink %>"/>
    </div>
    <div>
      <label>Image</label> <input type="text" name="image" id="post_image" value="<%= metadata.image %>"/>
    </div>
    <div>
      <label>Published</label> <input type="checkbox" name="published" id="post_published"<% if (!metadata.hidden) { %> checked="checked" <% } %>/>
    </div>
  </form>
</div>

<div class="content">
  <a class="save-post" href="#">Save</a>
  <textarea id="code" name="code"><%= content %></textarea>
</div>