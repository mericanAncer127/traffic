<div class='inner clearfix'>
  <div id='publish_status'>
    <small>Status</small>
  </div>

  <a class='toggle-mode preview' href='#'>Preview</a>

  <div class='document prose'>
    <div class='content'>

      <div class='metadata'>
        <a href='#' class='icon meta'>Toggle Metadata</a>

        <form id='metadata_form'>
          <h3><small>Metadata</small></h3>
          <textarea id="raw_metadata" name="raw_metadata"><%= raw_metadata %></textarea>
        </form>
      </div>

      <div class='content-header'>
        <input type='text' name='title' id='post_title' placeholder='Untitled' autocomplete='off' value='<%= metadata.title %>'/>
        <input type='text' name='subtitle' id='post_subtitle' placeholder='Subtitle' autocomplete='off' value='<%= metadata.subtitle %>'/>
      </div>
      <textarea id='code' name='code'><%= content %></textarea>
    </div>
    <div class='content-preview hidden'>
      <h1><%= metadata.title %></h1>
      <p class='subtitle'><%= metadata.subtitle %></p>
      <div class='post-content'></div>
    </div>

  </div>
</div>
