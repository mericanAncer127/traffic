<div class='header'>
  <div class='limiter clearfix'>
    <a class='title' href='/{{site.baseurl}}'>
      <span class='icon branding'>
        Prose
      </span>
    </a>

    <div class='user-status<%= !window.authenticated ? " logged-out" : "" %>'>
    <% if (window.authenticated) { %>
      <div class='dropdown-menu'>
        <a href='#' class='dropdown-hover'>
          <img class='avatar' src='<%= app.avatar %>' width='40' height='40' alt='User Avatar' />
          <span class='username'><%= app.username %></span>
        </a>
        <ul class='dropdown arrow-top'>
          <li><a class='logout' href='#'>Logout</a></li>
        </ul>
      </div>
    <% } else {Â %>
      <a class='button round' href='https://github.com/login/oauth/authorize?client_id={{site.oauth_client_id}}&scope=repo,user,gist&redirect_uri=<%= encodeURIComponent(window.location.href) %>'>Sign in using Github</a>
    <% } %>
    </div>
  </div>
</div>

<div class='heading limiter'>
  <% if (state.repo) { %>
    <a class='user' href='#<%= [state.user].join("/") %>'><%= state.user %></a>
    <a class='repo' href='#<%= [state.user, state.repo, "tree", state.branch].join("/") %>'><%= state.repo %></a>
    <%= app.state.title %>
  <% } %>
</div>

<div id='main' class='application clearfix limiter'>
  <div id='content' class='content fl'></div>
  <div class='sidebar fl'>
    <div id='drawer'></div>

    <div class='vert navigation'>
      <ul class='project nav'>
        <li>
          <a href='#settings' class='icon round projects'>
            <span class='popup round arrow-right'>Projects &amp; Oranizations</span>
          </a>
        </li>
        <% if (state.repo) { %>
          <li>
            <a href='#settings' class='icon round project'>
              <span class='popup round arrow-right'>Project Contents</span>
            </a>
          </li>
          <% if (window.authenticated) { %>
            <li>
              <a href='#<%= user %>/<%= repo %>/new/<%= branch %><%= path ? "/"+path : ""%>' class='icon round new new-file'>
                <span class='popup round arrow-right'>New File</span>
              </a>
            </li>
          <% } %>
        <% } %>
      </ul>
      <% if (window.authenticated && state.mode === 'edit') { %>
      <ul class='file nav'>
        <li>
          <a href='#settings' class='icon round edit'>
            <span class='popup round arrow-right'>Edit this page</span>
          </a>
        </li>
        <li>
          <a href='#settings' class='icon round preview' data-drawer=true>
            <span class='popup round arrow-right'>Preview this page on the site</span>
          </a>
        </li>
        <li>
          <a href='#metadata' class='icon round assets' data-drawer=true>
            <span class='popup round arrow-right'>Add Media to this post</span>
          </a>
        </li>
        <li>
          <a href='#settings' class='icon round settings' data-drawer=true>
            <span class='popup round arrow-right'>Configure Settings</span>
          </a>
        </li>
      </ul>
      <% } %>
    </div>
  </div>
</div>
