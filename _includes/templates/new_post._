<div class='inner clearfix'>
  <div class='step new-post'>
    <form id='new_post_form'>
      <h1><small>Create a new post</small></h1>
      <label>Filename</label>
      <input type='text' name='filename' class='filename' value='<%= new Date().format("Y-m-d") %>-your-post.md'/>
      <label>Title</label>
      <input type='text' name='title' class='title' value=''/>
      <label>Subtitle</label>
      <input type='text' name='subtitle' class='subtitle' value=''/>
      <div class='button-padding'>
        <input type='submit' value='Create' />
      </div>
    </form>
  </div>
</div>
