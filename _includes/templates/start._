<a href='/' class='branding title'>Columnist</a>
<div class='start dialog clearfix'>
  <% if (!authenticated) { %>
    <div id='hint'></div>
    <form id='login_form'><ul class='form'>
      <li>
        <label>GitHub user</label>
        <input type='text' name='user' class='required' id='github_user' placeholder='username' size='24' />
      </li>
      <li>
        <label>Password</label>
        <input type='password' id='github_password' class='required' name='password' placeholder='password' size='24' />
        <div class='button-padding state'>
          <input type='submit' value='Log in' />
        </div>
      </li>
    </ul></form>
  </div>
  <% } else { %>
  <div class='sites'>
    <h1><small>Choose a site:</small></h1>
    <ul class='site'>
      <% _.each(available_repos, function(r, index) { %>
      <li><a title='edit' href='#<%= app.username %>/<%= r.name %>/master'><%= r.name %></a></li>
      <% }) %>
    </ul>
  </div>
  <% } %>
</div>
