<% if (!authenticated) { %>
<div class='start dialog'>
  <div id='hint'></div>
  <form id="login_form"><ul class='form'>
    <li>
      <label>GitHub user</label>
      <input type='text' name='user' id="github_user" placeholder='username' size='24' />
    </li>
    <li>
      <label>Password</label>
      <input type='password' id="github_password" name='password' placeholder='password' size='24' />
      <input type='submit' value='Log in' />
    </li>
  </ul></form>
</div>
<% } else { %>
  <div><br/><br/><br/>
    <h1>Welcome, please choose a site:</h1>
    <div class="sites">
      <% _.each(available_repos, function(r, index) { %>
        <div class="site">
          <a href="#<%= app.username %>/<%= r.name %>/master"><%= r.name %></a>
        </div>
      <% }) %>
    </div>
  </div>
<% } %>
