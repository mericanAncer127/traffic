<% if (!authenticated) { %>
  <div class='start dialog clearfix'>
    <div class='splash'>
      <h2>Prose</h2>
      <div class='authorize'>
        <p>Prose is a content editor for GitHub, optimized for managing websites.</p>
        <p><a href='/about.html'>Learn more.</a></p>
        <a class='button' href='https://github.com/login/oauth/authorize?client_id={{site.oauth_client_id}}&scope=repo,user,gist'>Authorize with GitHub</a>
      </div>
    </div>
  </div>
<% } %>

<% if (authenticated) { %>
    <div class='inner'>
      <h2 class='label'>Projects</h2>
      <input type='text' placeholder='Filter Projects' />
    </div>
    <% _.each(owners, function(repos, owner) { %>
      <ul class='listing'>
        <% _.each(repos, function(r) { %>
        <li><a class='repo<%= r.private ? " private" : "" %>' data-user='<%= r.owner.login %>' data-repo='<%= r.name %>' href='#<%= r.owner.login %>/<%= r.name %>'>
            <% if (r.private) { %>
              <span class='icon inline small private'></span>
            <% } %>
            <%= r.name %>
            <span class='deemphasize'><%= r.description %></span>
          </a></li>
        <% }); %>
      </ul>
    <% });Â %>
<% } %>
