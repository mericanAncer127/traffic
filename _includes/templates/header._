<a href='{{site.baseurl}}' class='title icon'>Columnist</a>
  <% if (app.username) { %>
    <div class='user-status'>
      <a class='user'><%= app.username %></a>
      <div class='logout'><a href='#' class='logout'>Logout</div>
    </div>

    <!--Github account and links-->
    <% if (repo) { %>
      <div class='sites'>
        <select name='site' id='repository_name'>
          <% _.each(available_repos, function(r, index) { %>
            <option value='<%= r.name %>'<%= repo === r.name ? 'selected="selected"' : '' %>><%= r.name %></option>
          <% }) %>
        </select>
      </div>
    <% } %>
  <% }Â %>

