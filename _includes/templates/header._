<div class='limiter clearfix'>
  <a href='/{{site.baseurl}}' class='icon title'><span>Prose</span></a>

  <% if (state.repo) { %>
    <% var path = state.path %>

    <a class='user' href="#<%= [state.user].join('/') %>"><%= state.user %></a>
    <% if (state.repo) { %>
      <a class='repo' href="#<%= [state.user, state.repo, 'tree', state.branch].join('/') %>">
        <%= state.repo %>
      </a>
    <% } %>

  <% } else { %>
    <%= app.state.title %>
  <% } %>

  <div class='user-status<%= !window.authenticated ? " logged-out" : "" %>'>
  <% if (window.authenticated) { %>
    <div class='dropdown-menu'>
      <a href='#' class='dropdown-hover'>
        <img class='avatar' src='<%= app.avatar %>' width='40' height='40' alt='User Avatar' />
        <span class='username'><%= app.username %></span>
      </a>
      <ul class='dropdown arrow-top'>
        <li><a class='logout' href='#'>Logout</a></li>
      </ul>
    </div>
  <% } else {Â %>
      <a class='button' href='https://github.com/login/oauth/authorize?client_id={{site.oauth_client_id}}&scope=repo,user,gist&redirect_uri=<%= encodeURIComponent(window.location.href) %>'>Sign in using Github</a>
  <% } %>
  </div>
  <% if (state.file) { %>
    <a class='browse-files' href="#<%= [state.user, state.repo, 'tree', state.branch, state.path].join('/') %>">
      Browse Files
    </a>
  <% } %>
</div>
