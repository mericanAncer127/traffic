<a href='{{site.baseurl}}' class='title'>Poole</a>
    
    <div class="navigation">
      <!--Github account and links-->
      <% if (state.repo) { %>
      <div class="root"><a href="#">Sites</a></div>
        <div class="repo">
          <% if (state.repo) { %>
            &nbsp;&gt; <a href="#<%= [state.user, state.repo, state.branch].join('/') %>"><%= state.repo %></a></div>
          <% } %>
        <div class="path">
          <% var path = state.path.replace('_posts/','').replace('_posts',''); %>
          <% if (path) { %>
            &nbsp;&gt; <a href="#<%= [state.user, state.repo, state.branch, state.path].join('/') %>"><%= path %></a>
          <% } %>
        </div>
        <div class="file">
          <% if (state.file) { %>
            &nbsp;&gt; <%= state.file %>
          <% } %>
        </div>
      <% } %>
    </div>
  <% if (app.username) { %>
    <div class='user-status'>
      <ul>
        <li class='dropdown'>
          <a class='dropdown-toggle user' data-toggle='dropdown' href='#'>
            <%= app.username %>
            <b class='caret'></b>
          </a>
          <ul class='dropdown-menu flank-right'>
            <li><a href='/' >Sites</a></li>
            <li><a href='#' class='logout'>Logout</a></li>
          </ul>
        </li>
      </ul>
    </div>
  <% }Â %>

