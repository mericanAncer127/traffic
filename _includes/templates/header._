<a href='{{site.baseurl}}' class='title'><span>Poole.</span></a>
    
<div class="navigation">
  <!--Github account and links-->
  <div class="root"><a href="#">Repos</a></div>
  <% if (state.repo) { %>
    <div class="repo">
      <% if (state.repo) { %>
        <a href="#<%= [state.user, state.repo, state.branch].join('/') %>"><%= state.repo %></a></div>
      <% } %>
    <div class="path">
      <% var path = state.path.replace('_posts/','').replace('_posts',''); %>
      <% if (path) { %>
        <a href="#<%= [state.user, state.repo, state.branch, state.path].join('/') %>"><%= path %></a>
      <% } %>
    </div>
    <div class="file">
      <% if (state.file) { %>
        <%= state.file %>
      <% } %>
    </div>
  <% } %>
</div>
<% if (app.username) { %>
  <div class='user-status'>
    <img width="20" src="<%= $.cookie("avatar") %>"/>
    <%= app.username %> <a class="logout" href="#">Logout</a>
  </div>  
<% }Â %>
